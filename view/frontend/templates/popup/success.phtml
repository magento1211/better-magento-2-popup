    <script>
        require([
            'jquery',
        ], function ($) {
            $('.btn-copy').click(function () {
                var copyText = $('#mp-coupon-code');
                copyText.select();
                document.execCommand("copy");
                $('.btn-copy').text('Copied');
                copyText.blur();
            })
        });
    </script>
