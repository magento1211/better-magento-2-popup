<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="betterpopup" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Better Popup</label>
            <tab>mageplaza</tab>
            <resource>Mageplaza_Productslider::betterpopup_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>General Configuration</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Select Yes to enable this module</comment>
                </field>
            </group>
            <group id="what_to_show" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>What to Show</label>
                <field id="html_content" sortOrder="10" type="textarea" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Content</label>
                    <comment>HTML content</comment>
                </field>
                <field id="responsive" translate="label comment" type="select" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Responsive design</label>
                    <source_model>Mageplaza\BetterPopup\Model\Config\Source\Responsive</source_model>
                </field>
                <field id="width" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Width</label>
                    <comment>In pixel</comment>
                    <depends>
                        <field id="betterpopup/what_to_show/responsive">1</field>
                    </depends>
                </field>
                <field id="height" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Height</label>
                    <comment>In pixel</comment>
                    <depends>
                        <field id="betterpopup/what_to_show/responsive">1</field>
                    </depends>
                </field>
                <field id="background_color" translate="label" type="text" sortOrder="50" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Background color</label>
                    <validate>jscolor {hash:true,refine:false}</validate>
                </field>
                <field id="text_color" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Text color</label>
                    <validate>jscolor {hash:true,refine:false}</validate>
                </field>
                <group id="popup_success" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Popup Success</label>
                    <field id="enabled_fireworks" translate="label comment" type="select" sortOrder="80" showInDefault="1"
                           showInWebsite="1" showInStore="1">
                        <label>Show congratulation fireworks</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="popup_success_content" sortOrder="90" type="textarea" showInDefault="1" showInWebsite="1"
                           showInStore="1">
                        <label>Content</label>
                        <comment>HTML content</comment>
                    </field>
                    <field id="coupon_code" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1"
                           showInStore="1">
                        <label>Coupon Code</label>
                    </field>
                </group>
            </group>
            <group id="where_to_show" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Where to Show</label>
                <field id="which_page_to_show" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Which page to show</label>
                    <source_model>Mageplaza\BetterPopup\Model\Config\Source\PageToShow</source_model>
                </field>
                <field id="include_pages" translate="label comment" type="textarea" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Include pages</label>
                    <comment>Handle name</comment>
                    <depends>
                        <field id="betterpopup/where_to_show/which_page_to_show">3</field>
                    </depends>
                </field>
                <field id="include_pages_with_url" sortOrder="30" type="textarea" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Include Page with URL contains</label>
                    <comment>Enter 'url path' (separated by ';')</comment>
                    <depends>
                        <field id="betterpopup/where_to_show/which_page_to_show">3</field>
                    </depends>
                </field>
                <field id="exclude_pages" translate="label comment" type="multiselect" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Exclude pages</label>
                    <source_model>Mageplaza\BetterPopup\Model\Config\Source\IncludePages</source_model>
                    <comment>Handle name</comment>
                    <depends>
                        <field id="betterpopup/where_to_show/which_page_to_show">2</field>
                    </depends>
                </field>
                <field id="exclude_pages_with_url" sortOrder="50" type="textarea" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Exclude Page with URL contains</label>
                    <comment>Url path</comment>
                    <depends>
                        <field id="betterpopup/where_to_show/which_page_to_show">2</field>
                    </depends>
                </field>
                <field id="manually_insert" translate="label" type="label" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Insert manually this snippet to your page</label>
                    <frontend_model>Mageplaza\BetterPopup\Block\Adminhtml\System\FeatureDisplay</frontend_model>
                    <depends>
                        <field id="betterpopup/where_to_show/which_page_to_show">1</field>
                    </depends>
                </field>
            </group>
            <group id="when_to_show" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>When to Show</label>
                <field id="popup_appear" translate="label comment" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>When the popup appear?</label>
                    <source_model>Mageplaza\BetterPopup\Model\Config\Source\Appear</source_model>
                </field>
                <field id="after_scroll" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>After scroll down</label>
                    <comment>Percentage</comment>
                    <depends>
                        <field id="betterpopup/when_to_show/popup_appear">4</field>
                    </depends>
                </field>
                <field id="delay" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>After x secounds</label>
                    <depends>
                        <field id="betterpopup/when_to_show/popup_appear">3</field>
                    </depends>
                </field>
                <field id="cookieExp" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Popup will show again after</label>
                    <comment>Days. Leave empty will hiding for 30 days</comment>
                </field>
                <field id="show_float_button" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Float Button</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Click trigger to open</comment>
                </field>
                <field id="float_button_direction" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Float button direction</label>
                    <source_model>Mageplaza\BetterPopup\Model\Config\Source\ButtonDirection</source_model>
                    <depends>
                        <field id="betterpopup/when_to_show/show_float_button">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
